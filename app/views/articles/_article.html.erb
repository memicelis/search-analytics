<div id="<%= dom_id article %>" class="border rounded-lg p-4 mb-4 bg-white">
  <h1 class="text-2xl font-bold mb-2">
    <%= article.title %>
  </h1>
  <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "text-blue-500 hover:underline" %>
  <hr class="mt-6">
</div>

