<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">

  <%= form_with(url: articles_path, method: :get, data: { turbo_frame: "articles"}) do |form| %>
    <div class="flex space-x-3">
    <%= form.text_field :query, class:"px-2 py-3 border ring-0 rounded", placeholder: "Search articles..."%>

    <%= form.submit "Search", class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
  <% end %>
  
  </div>
  <div class="my-16">
  <%= render "articles", articles: @articles %>
  </div>

</div>
