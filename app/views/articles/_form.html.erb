<%= form_with(model: Article.new, url: articles_path, method: :post, class: 'flex flex-col items-start', data: { turbo_frame: "articles" }) do |form| %>
  <div class="bg-white p-8 rounded-lg flex space-x-3">
    <%= form.text_field :title, placeholder: 'Add title', class: 'w-full border rounded-md py-2 px-3' %>
    <%= form.submit 'Add New Title', class: "bg-blue-600 text-white py-3 px-5 rounded-lg font-medium" %>
  </div>
<% end %>





